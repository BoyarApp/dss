# Digital Signature Service (DSS) runtime
SIGN_API_KEY=dev-sign-key
SIGN_WEBHOOK_SECRET=dev-sign-webhook
SIGN_WEBHOOK_TOLERANCE=300

# Azure Key Vault integration (client credentials or managed identity)
AZURE_KEY_VAULT_URI=https://your-key-vault-name.vault.azure.net/
AZURE_CLIENT_ID=00000000-0000-0000-0000-000000000000
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=00000000-0000-0000-0000-000000000000

# JVM sizing overrides
JAVA_OPTS=-Xms512m -Xmx1024m

# Optional: override image tag or host binding when running locally
DSS_IMAGE=esig/dss:latest
SIGN_PORT=9000
